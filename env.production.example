# ============================================
# 프로덕션 환경 변수 템플릿
# ============================================
# 이 파일을 복사하여 .env 파일로 사용하세요
# cp env.production.example .env
# 그리고 실제 값으로 변경하세요
# ============================================

# ============================================
# 필수 설정
# ============================================

# 서버 포트
PORT=3000

# ============================================
# Redis 설정
# ============================================

# Redis 비밀번호 (강력한 비밀번호로 변경 필수!)
REDIS_PASSWORD=your-strong-redis-password-here

# Redis 연결 URL (비밀번호 포함)
REDIS_URL=redis://:your-strong-redis-password-here@redis:6379

# ============================================
# Embedding 모델 설정
# ============================================
# Python 서비스에서 실행되는 BGE-M3 모델
# BGE-m3는 다국어 모델로 한국어를 포함한 100+ 언어 지원
EMBEDDING_MODEL=BAAI/bge-m3

# Python 임베딩 서비스 URL (Docker 내부 네트워크)
EMBEDDING_SERVICE_URL=http://embedding-service:8000

# Python 임베딩 서비스 포트 (외부 접근용, 선택사항)
EMBEDDING_SERVICE_PORT=8000

# ============================================
# 캐시 및 검색 설정
# ============================================

# Redis 캐시 TTL (초 단위, 기본 1시간 = 3600)
CACHE_TTL_SECONDS=3600

# 벡터 양자화 설정 (캐시 키 생성용)
QUANTIZE_DECIMALS=2
QUANTIZE_DIM_PREFIX=8

# ============================================
# 환경 설정
# ============================================
NODE_ENV=production

# ============================================
# 보안 설정 (선택사항)
# ============================================

# WebSocket 인증 토큰 (구현 후 사용)
# WS_AUTH_TOKEN=your-secure-random-token-here

# Rate limiting (요청/분)
# RATE_LIMIT_PER_MINUTE=60

