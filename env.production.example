# ============================================
# 프로덕션 환경 변수 템플릿
# ============================================
# 이 파일을 복사하여 .env 파일로 사용하세요
# cp env.production.example .env
# 그리고 실제 값으로 변경하세요
# ============================================

# ============================================
# 필수 설정
# ============================================

# OpenAI API 키 (실제 유효한 키로 변경 필수!)
OPENAI_API_KEY=sk-your-actual-api-key-here

# MOCK 모드 (프로덕션에서는 반드시 false!)
MOCK_MODE=false

# 서버 포트
PORT=3000

# ============================================
# Redis 설정
# ============================================

# Redis 비밀번호 (강력한 비밀번호로 변경 필수!)
REDIS_PASSWORD=your-strong-redis-password-here

# Redis 연결 URL (비밀번호 포함)
REDIS_URL=redis://:your-strong-redis-password-here@redis:6379

# ============================================
# OpenAI 모델 설정
# ============================================
OPENAI_MODEL=text-embedding-3-small
CHAT_MODEL=gpt-4o-mini

# ============================================
# 캐시 및 검색 설정
# ============================================

# Redis 캐시 TTL (초 단위, 기본 1시간 = 3600)
CACHE_TTL_SECONDS=3600

# 최소 유사도 임계값 (0.0 ~ 1.0)
# 이 값보다 낮으면 LLM 폴백 사용
MIN_SCORE_THRESHOLD=0.75

# 벡터 양자화 설정 (캐시 키 생성용)
QUANTIZE_DECIMALS=2
QUANTIZE_DIM_PREFIX=8

# ============================================
# 환경 설정
# ============================================
NODE_ENV=production

# ============================================
# 보안 설정 (선택사항)
# ============================================

# WebSocket 인증 토큰 (구현 후 사용)
# WS_AUTH_TOKEN=your-secure-random-token-here

# Rate limiting (요청/분)
# RATE_LIMIT_PER_MINUTE=60

